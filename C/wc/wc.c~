#include<stdio.h>

int main(int argc, char *argv[]){
	printf("Hello World!\n");
	printf("Argument 1 is %s\n", argv[0]);
	printf("Argument 2 is %s\n", argv[1]);
	printf("Argument 3 is %s\n", argv[2]);
	if (argv[1] != "(null)"){
		printf("Argument 2 is not null, %s\n", argv[1]);
	}else{
		printf("Argument 2 is null, %s\n", argv[1]);
	}
	return 0;
}
